{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "layout": {
      "contentSize": "1140px",
      "wideSize": "1200px"
    },
    "typography": {
      "dropCap": true,
      "fluid": true,
      "fontSizes": [
        {
          "fluid": {
            "min": "10px",
            "max": "12px"
          },
          "name": "Tiny",
          "size": "12px",
          "slug": "yuki-font-tiny"
        },
        {
          "fluid": {
            "min": "12px",
            "max": "14px"
          },
          "name": "XXSmall",
          "size": "14px",
          "slug": "yuki-font-xxsmall"
        },
        {
          "fluid": {
            "min": "14px",
            "max": "16px"
          },
          "name": "XSmall",
          "size": "16px",
          "slug": "yuki-font-xsmall"
        },
        {
          "fluid": {
            "min": "16px",
            "max": "18px"
          },
          "name": "Small",
          "size": "18px",
          "slug": "yuki-font-small"
        },
        {
          "fluid": {
            "min": "18px",
            "max": "20px"
          },
          "name": "Medium",
          "size": "22px",
          "slug": "yuki-font-medium"
        },
        {
          "fluid": {
            "min": "24px",
            "max": "32px"
          },
          "name": "Large",
          "size": "32px",
          "slug": "yuki-font-large"
        },
        {
          "fluid": {
            "min": "32px",
            "max": "48px"
          },
          "name": "XLarge",
          "size": "48px",
          "slug": "yuki-font-xlarge"
        },
        {
          "fluid": {
            "min": "40px",
            "max": "64px"
          },
          "name": "XXLarge",
          "size": "64px",
          "slug": "yuki-font-xxlarge"
        }
      ]
    },
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "customSpacingSize": true,
      "units": [
        "%",
        "px",
        "em",
        "rem",
        "vh",
        "vw"
      ],
      "spacingScale": {
        "operator": "*",
        "increment": 0,
        "steps": 0,
        "mediumStep": 0,
        "unit": "px"
      },
      "spacingSizes": [
        {
          "name": "2X Small",
          "size": "0.5rem",
          "slug": "xx-small"
        },
        {
          "name": "Extra Small",
          "size": "1rem",
          "slug": "x-small"
        },
        {
          "name": "Small",
          "size": "1.5rem",
          "slug": "small"
        },
        {
          "name": "Medium",
          "size": "2rem",
          "slug": "medium"
        },
        {
          "name": "Large",
          "size": "3rem",
          "slug": "large"
        },
        {
          "name": "Extra Large",
          "size": "4rem",
          "slug": "x-large"
        },
        {
          "name": "2X Large",
          "size": "6rem",
          "slug": "xx-large"
        }
      ]
    }
  },
  "styles": {
    "elements": {
      "link": {
        "typography": {
          "textDecoration": "none"
        }
      }
    }
  }
}